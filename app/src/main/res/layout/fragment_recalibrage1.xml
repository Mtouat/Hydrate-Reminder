<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_appli"
    android:orientation="vertical"
    android:theme="@style/text_color"
    tools:context=".Recalibrage1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tV_Recalibrage"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/recalibrage"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tV_consigne_recalibrage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/consigne1"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/iV_fleche_bas"
        android:layout_width="184dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/fleche_bas_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iV_socle"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:src="@drawable/socle_image" />

        <ImageButton
            android:id="@+id/iB_page_suivante"
            android:layout_width="72dp"
            android:layout_height="116dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="vers page suivante"/>

    </LinearLayout>

</LinearLayout>