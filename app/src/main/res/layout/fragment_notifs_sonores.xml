<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_appli"
    android:orientation="vertical"
    android:theme="@style/text_color"
    tools:context=".Notifs_sonores">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tV_notifs_sonores"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/notifs_sonores" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_oui_notif_vib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/fond_boutons"
            android:text="@string/oui"
            android:textColor="@color/texte_appli" />

        <Button
            android:id="@+id/btn_non_notif_vib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/fond_boutons"
            android:text="@string/non"
            android:textColor="@color/texte_appli" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="574dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rB_audio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audio1"
                android:textColor="@color/texte_appli" />

            <RadioButton
                android:id="@+id/rB_audio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audio2"
                android:textColor="@color/texte_appli" />

            <RadioButton
                android:id="@+id/rB_audio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audio3"
                android:textColor="@color/texte_appli" />

            <RadioButton
                android:id="@+id/rB_sons_persos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audio_perso"
                android:textColor="@color/texte_appli" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iV_notif_son"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:src="@drawable/son_image" />

            <ImageView
                android:id="@+id/iV_notif_son3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/son_image" />

            <ImageView
                android:id="@+id/iV_notif_son2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/son_image" />

            <ImageView
                android:id="@+id/iV_sons_persos"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:src="@android:drawable/ic_menu_add" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/valider_notifs_sons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valider" />

</LinearLayout>