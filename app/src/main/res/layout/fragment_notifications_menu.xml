<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_appli"
    android:orientation="vertical"
    android:theme="@style/text_color"
    tools:context=".Notifications_menu">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:theme="@style/titles">

        <ImageView
            android:id="@+id/iV_retour_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/tV_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/fond_boutons"
            android:text="@string/notifications" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_luminosite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_marginBottom="30sp"
        android:layout_weight="1"
        android:backgroundTint="@color/fond_boutons"
        android:text="@string/luminosite"
        android:textColor="@color/texte_appli"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_vibrations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="30sp"
        android:layout_weight="1"
        android:backgroundTint="@color/fond_boutons"
        android:text="@string/vibrations"
        android:textColor="@color/texte_appli"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_audio_son"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="30sp"
        android:layout_weight="1"
        android:backgroundTint="@color/fond_boutons"
        android:text="@string/audio_sonneries"
        android:textColor="@color/texte_appli"
        android:textSize="20sp" />

</LinearLayout>