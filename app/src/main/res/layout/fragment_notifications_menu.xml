<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notifications_menu"
    android:background="@color/fond_appli"
    android:theme="@style/text_color"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iV_retour_nm"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/tV_notifications"
            android:layout_width="344dp"
            android:layout_height="72dp"
            android:background="@color/fond_boutons"
            android:text="@string/notifications" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_luminosite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/luminosite"
        android:textColor="@color/texte_appli"
        android:backgroundTint="@color/fond_boutons"/>

    <Button
        android:id="@+id/btn_vibrations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vibrations"
        android:textColor="@color/texte_appli"
        android:backgroundTint="@color/fond_boutons"/>

    <Button
        android:id="@+id/btn_audio_son"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_sonneries"
        android:textColor="@color/texte_appli"
        android:backgroundTint="@color/fond_boutons"/>

</LinearLayout>